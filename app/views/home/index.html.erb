                    </div>
              </div>
			  </div>
				</div>
            </div>
            <%count+=1%>
            <%end%>
            <%else%>
            <div class="item active">
                <div class="fill" style="background-image:url(<%= asset_path 'slide2.jpg' %>);"></div>
               <div class="row">
				<div class="col-md-6">
                <div class="carousel-caption">
                    <div class="jumbotron">
                          <h4 class="event_title">Welcome</h4>
                          <p class="lead">This is the Official SamaSource Nairobi Office Intranet</p>
                          
</div>
              </div>
			  </div>
				</div>
            </div>
            <%end%>
        </div>

        <% if @events.count > 1 %>
        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
