            <li data-target="#myCarousel" data-slide-to="<%=event.id%>"></li>
            <%end%>
        </ol>
        <%end%>
        <!-- Wrapper for slides -->
  
        <div class="carousel-inner">
            <% if @events.count > 0%>
            <%count=1%>
