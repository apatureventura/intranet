<%= simple_form_for @poll, remote: true, html: { class: 'well form-horizontal',id: 'polls_form' } do |f|%>
<!-- <form class="well form-horizontal" action=" " method="post"  id="contact_form"> -->
<fieldset>
<legend>Vote for the employee of the month</legend>
<!-- Text input-->
<div class="form-group">
  <label class="col-md-5 control-label">Name (FirstName LastName)</label>  
  <div class="col-md-7 inputGroupContainer">
  <div class="input-group">
  <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
  <%=f.association :user, collection: @users, label: false, prompt: "Select Your name", input_html:{class: 'form-control', name: 'user_id'}%>
  <!-- <input  name="first_name" placeholder="First Name" class="form-control"  type="text"> -->
    </div>
  </div>
</div>
<!-- Select Basic -->
<div class="form-group"> 
  <label class="col-md-5 control-label">Please select the name of your project</label>
    <div class="col-md-7 selectContainer">
    <div class="input-group">
     <span class="input-group-addon"><i class="fa fa-cog" aria-hidden="true"></i></span>
    <select name="state" class="form-control selectpicker" >
      <option value=" " >Please select your Project</option>
      
	 <option>CAL </option>
	 <option>JMP2</option>
	 <option>NGU</option>
	 <option>WTU</option>
	 <option>BNE</option>
	 <option>WRT</option>
	 <option>UMB Segmentation</option>
	 <option>UMB - Detection</option>
	 <option>UMB lane Lines</option>
	 <option>SRY</option>
	 <option>GAR II</option>
	 <option>GAR I</option>
	 <option>GLE</option>
	 <option>RJE</option>
	 <option>FOH </option>
	 <option>IFU</option>
	 <option>NOU</option>
	 <option>AOG</option>
    </select>
  </div>
</div>
</div>
<!-- Text area -->
<div class="form-group">
  <label class="col-md-5 control-label">Why you are voting for the Nominee</label>
    <div class="col-md-7 inputGroupContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></span>
        <%= f.text_area :body, class: "form-control", name: "body"%>
        	<!-- <textarea class="form-control" name="body" placeholder="Why you are voting for the Nominee"></textarea> -->
  </div>
  </div>
</div>

<!-- Success message -->
<div class="alert alert-success" role="alert" id="success_message">
Success <i class="fa fa-thumbs-o-up" aria-hidden="true"></i> Your Vote has been sent</div>

<!-- Button -->
<div class="form-group">
  <label class="col-md-5 control-label"></label>
  <div class="col-md-7">
  <%= button_tag type: "submit", class: "btn btn-warning" do%>
    Send <%= fa_icon "paper-plane" %>
     <% end %>
    <!-- <button type="submit" class="btn btn-warning" >Send <i class="fa fa-paper-plane" aria-hidden="true"></i></button> -->
  </div>
</div>

</fieldset>
<%end%>

