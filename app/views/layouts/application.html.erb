<!DOCTYPE html>
<html>
  <head>
    <title>Intranet</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

   <!-- Our Navigation Menu-->
    <nav class="navbar navbar-inverse navbar-fixed-top added_nav" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to root_path, class: "navbar-brand" do %>
                 <%= image_tag("logo_sama.png", class:"image_logo")%>
                <%end%>
            </div>
            <!-- Collecting the nav links, forms, and other content for toggling bootstrap -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                     <li>
                        <%=link_to "Home", root_url%>
                    </li>
                    <li>
                      <%=link_to "Blog", posts_url%>
                    </li>
                    <li>
                        <a href="#">Announcements</a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Gallery<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="#">Dropdown Menu</a>
                            </li>
                            
                        </ul>
                    </li>
                     <li>
                        <a href="#">Downloads</a>
                    </li>
                     <li>
                      <% if user_signed_in? %>
                      <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                      <%= image_tag(current_user.image)%>
                      <!-- <img src="images/img.jpg" alt=""> -->
                      <%=current_user.name%>
                    <span class=" fa fa-angle-down"></span>
                  </a>
                  <ul class="dropdown-menu dropdown-usermenu pull-right">
                      <li>  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> </li>
                     <li>
                      <%= link_to '<i class="fa fa-sign-out pull-right"></i> Logout'.html_safe, destroy_user_session_path, method: :delete, :class => 'navbar-link'%>
                        
                      </li>
                  </ul>
                      <% else %>
                      <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, class: 'user-profile'%>
                      <% end %>
            
                    </li>                    
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

  

    <% if notice %>
      <script>
        alertify.set('notifier','position', 'top-right');
        alertify.notify('<%= notice %>', 'success', 5);
    </script>
    <% end %>
    <% if alert %>
    <script>
        alertify.set('notifier','position', 'top-right');
        alertify.notify('<%= alert %>', 'error', 15);
    </script>
    <% end %>
    <%= yield %>
     <!-- Footer -->
           <!-- Call to Action Section -->
  <div class="well scoller">
      <div class="row">
          <div class="col-md-12">
              <p> <marquee> Admin updates : Kindly remove gum below your desks : Food Sampling for new caterers coming soon : First Aider on duty > Morris Maluni</marquee></p>
          </div>

      </div>
  </div>
 <hr>
	<footer>
		<div class="row">
			<div class="col-lg-12">
				<p>Copyright &copy; Samasource Kenya Ltd 2017</p>
			</div>
		</div>
	</footer>

    </div>
    <!-- /.container -->
   <%= javascript_include_tag 'application', 'data-turbolinks-eval' => false %>
  </body>
</html>
