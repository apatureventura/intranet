<%= simple_form_for(@repair_request) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs" >

    <h1> Affected area (Floor and Block) </h1>
    <div class="block" >
    <%= f.radio_button(:area, "C1 5th Floor") %>
    <%= f.label :area, "C1 5th Floor", :value => "C1 5th Floor" %>
    </div>

    <div class="block" >
    <%= f.radio_button(:area, "C3 5th Floor") %>
    <%= f.label :area, "C3 5th Floor", :value => "C3 5th Floor" %>
    </div>
    <div class="block" >
    <%= f.radio_button(:area, "D3 2nd Floor") %>
    <%= f.label :area, "D3 2nd Floor", :value => "D3 2nd Floor" %>
    </div>
    <div class="block" >
    <%= f.radio_button(:area, "D3 3rd Floor") %>
    <%= f.label :area, "D3 3rd Floor", :value => "D3 3rd Floor" %>
    </div>
    <div class="block" >
    <%= f.radio_button(:area, "D3 4th Floor") %>
    <%= f.label :area, "D3 4th Floor", :value => "D3 4th Floor" %>
    </div>
    <div class="block" >
    <%= f.radio_button(:area, "D1 Cafeteria") %>
    <%= f.label :area, "D1 Cafeteria", :value => "D1 Cafeteria" %>
    </div>

    <%= f.label :category, "category", :value => "category" %>
    <%= f.select(:category, [['Flooring','Flooring'],['Furniture','Furniture'],
      ['Doors and Windows','Doors and Windows'],['Lighting','Lighting'],
      ['Plumbing','Plumbing'],['Fire Equipment','Fire Equipment'],
      ['Heating & Cooling','Heating & Cooling'],
      ['Access Control','Access Control'],['Roofing','Roofing']]) %>

    <%= f.label :description, "description", :value => "description" %>
    <%= f.select(:description, [['Spillage','Spillage'],['Cracked Tiles','Cracked Tiles']]) %>
    <%= f.select(:description, [['Broken Chairs','Broken Chairs'],['Misplaced','Misplaced'],
      ['Malfactioning Lever','Malfactioning Lever'],['Broken Lockers','Broken Lockers']]) %>
    <%= f.select(:description, [['Broken','Broken'],['Malfactioning Hinges','Malfactioning Hinges'],
      ['Spoiled Handles','Spoiled Handles']]) %>
    <%= f.select(:description, [['Malfunctioning Sockets','Malfunctioning Sockets'],
      ['Malfunctioning Switches','Malfunctioning Switches'],['Broken Sockets','Broken Sockets'],
      ['Broken Switches','Broken Switches'],['Malfunctioning Bulbs','Malfunctioning Bulbs']]) %>

    <%= f.select(:description, [['Washroom Blockage','Washroom Blockage'],
      ['Kitchen Blockage','Kitchen Blockage'],['Washroom Leakage','Washroom Leakage'],
      ['Kitchen Leakage','Kitchen Leakage'],['Blocked toilet Sinks','Blocked toilet Sinks'],
      ['Blocked Toilet Bowls','Blocked Toilet Bowls'],['Blocked Kitchen Sinks','Blocked Kitchen Sinks'],
      ['Soap Dispensers','Soap Dispensers'],['Hand Driers','Hand Driers']]) %>

    <%= f.select(:description, [['Spoiled/ Dropped Fire Extinguisher','Spoiled/ Dropped Fire Extinguisher'],
      ['Spoiled Fire Alarm','Spoiled Fire Alarm'],
      ['Replenishing of the first aid Box','Replenishing of the first aid Box']]) %>

    <%= f.select(:description, [['AC not working','AC not working'],
    ['Microwave-Breakage,Malfunctioning e.t.c','Microwave-Breakage,Malfunctioning e.t.c'],
    ['Refrigerator-Breakage,Malfunctioning e.t.c','Refrigerator-Breakage,Malfunctioning e.t.c']]) %>

    <%= f.select(:description, [['AC not working','AC not working'],['Door Access','Door Access'],
      ['Biometrics not working','Biometrics not working']]) %>

    <%= f.select(:description, [['Cracks','Cracks'],['Leakages','Leakages'],
    ['Moist/Misplaced Ceiling','Moist/Misplaced Ceiling']]) %>

    <%= f.input :description,"other"%>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
