<%= simple_form_for(@repair_request) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    
    <%= f.radio_button(:area, "C1 5th Floor") %>
    <%= f.label :area, "C1 5th Floor", :value => "C1 5th Floor"  %>
    
    
    <%= f.radio_button(:area, "C3 5th Floor") %>
    <%= f.label :area, "C3 5th Floor", :value => "C3 5th Floor"  %>
    
    
    <%= f.radio_button(:area, "D3 2nd Floor") %>
    <%= f.label :area, "D3 2nd Floor", :value => "D3 2nd Floor"  %>
    
    
    <%= f.radio_button(:area, "D3 3rd Floor") %>
    <%= f.label :area, "D3 3rd Floor", :value => "D3 3rd Floor"  %>
    
    
    <%= f.radio_button(:area, "D3 4th Floor") %>
    <%= f.label :area, "D3 4th Floor", :value => "D3 4th Floor"  %>
    
    
    <%= f.radio_button(:area, "D1 Cafeteria") %>
    <%= f.label :area, "D1 Cafeteria", :value => "D1 Cafeteria"  %>
  
    
    <%= f.input :category %>
    <%= f.input :description %>
