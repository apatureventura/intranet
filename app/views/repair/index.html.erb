<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>

  <% @repairs.each do |article| %>
    <tr>
      <td><%= article.user_id %></td>
      <td><%= article.location %></td>
      <td><%= article.category %></td>
      <td><%= article.description %></td>
      <td><%= article.created_at %></td>
      <td><%= article.id %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
</table>
