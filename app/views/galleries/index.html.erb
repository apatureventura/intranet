<div class="container">
  <h1>Galleries</h1>

  <div id="album" class="transitions-enabled">
    <% @galleries.each do |gallery| %>
      <div class="box panel panel-default">
        <%= image_tag gallery.gallery_attachments[0].photo, class: "img-reponsive"%>
        <div class="panel-body">
          <%= link_to gallery.title, gallery %>
          <span class="badge">
            <%= gallery.gallery_attachments.count %>
          </span>
        </div>
      </div>
    <% end %> 
  </div>
</div>



<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= gallery.title %></td>
        <td><%= gallery.gallery_attachments.count %></td>
        <td><%= link_to 'Show', gallery %></td>
        <td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
        <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gallery', new_gallery_path %>
